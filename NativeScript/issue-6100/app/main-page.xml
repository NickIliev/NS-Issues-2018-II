
<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:greeter="components" 
      xmlns:greeter="components" 
      navigatingTo="navigatingTo" 
      class="page">
    <GridLayout id="container" backgroundColor="lightgray">
        <ListView items="{{ items }}"  loaded="onLoaded" itemTemplateSelector="$index % 2 === 0 ? ($index % 3 === 0 ? 'supereven' : 'even' ) : 'odd'">
            <ListView.itemTemplates>

                <template key="supereven">
                    <StackLayout class="list-group-item" style.backgroundColor="blue" padding="10">
                        <Label text="{{ 'index: ' +  $index }}"  class="h1" color="red" textWrap="true" />
                        <greeter:greeter job="{{ someJob, someJob }}" horizontalAlignment="right"/>
                    </StackLayout>
                </template>

                <template key="even">
                    <StackLayout class="list-group-item" style.backgroundColor="white" padding="5">
                        <Label text="{{ 'index: ' +  $index }}"  class="h1" color="red" textWrap="true" />
                        <greeter:greeter name="{{ someName, someName }}" horizontalAlignment="center"/>
                    </StackLayout>
                </template>

                <template key="odd">
                    <StackLayout class="list-group-item" style.backgroundColor="pink" padding="20">
                        <Label text="{{ 'index: ' +  $index }}" class="h1" color="red" textWrap="true" />
                        <greeter:greeter job="{{ someJob, someJob }}" name="{{ someName, someName }}" />
                    </StackLayout>
                </template>

            </ListView.itemTemplates>
        </ListView>
    </GridLayout>
</Page>
