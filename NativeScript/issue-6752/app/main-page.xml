<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">

    <Page.actionBar>
        <ActionBar title="My App" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <ScrollView>
        <GridLayout rows="auto * *" columns="*">
            <Button row="0" text="Take Photo" tap="takePhoto" />
            <Image row="1" id="str-none" src="{{ taken }}" stretch="none" />
            <Image row="2" id="str-aspect" src="{{ taken }}" stretch="aspectFill" />
        </GridLayout>
    </ScrollView>
    
</Page>
